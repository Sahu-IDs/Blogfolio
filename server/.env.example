# ===================================
# DATABASE CONFIGURATION
# ===================================

# MongoDB Atlas Connection String
# Replace with your own MongoDB Atlas credentials
ATLASDB_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE?retryWrites=true&w=majority

# Alternative: Local MongoDB
# ATLASDB_URL=mongodb://localhost:27017/blogfolio

# ===================================
# SERVER CONFIGURATION
# ===================================

# Environment: development | production | test
NODE_ENV=development

# Server Port (default: 8000)
PORT=8000

# ===================================
# AUTHENTICATION & SECURITY
# ===================================

# JWT Secret Keys (Generate strong random strings)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SECRET=your_super_secret_code_here
ACCESS_SECRET_KEY=your_access_secret_key_minimum_32_characters
REFRESH_SECRET_KEY=your_refresh_secret_key_minimum_32_characters

# ===================================
# EMAIL CONFIGURATION (Optional)
# ===================================

# Gmail Configuration for Contact Form
# IMPORTANT: Use Gmail App Password, NOT your regular Gmail password
# How to get App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# Default recipient for contact form messages
OWNER_EMAIL=your_email@gmail.com
DEFAULT_RECIPIENT_EMAIL=your_email@gmail.com

# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Owner User ID (Optional - for special privileges)
OWNER_USER_ID=your_user_id_from_mongodb

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ===================================
# LOGGING
# ===================================

# Log Level: error | warn | info | debug
LOG_LEVEL=info

# ===================================
# FILE UPLOAD
# ===================================

# Max file size in MB
MAX_FILE_SIZE=10

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# ===================================
# INSTRUCTIONS
# ===================================
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env file to Git
# 4. Keep your secrets safe!
